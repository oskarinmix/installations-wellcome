
generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum InstallationType {
  FREE
  PAID
}

enum Currency {
  USD
  BCV
}

model Upload {
  id         Int      @id @default(autoincrement())
  fileName   String
  uploadedAt DateTime @default(now())
  sales      Sale[]
}

model Seller {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  pin   String?
  sales Sale[]
}

model Plan {
  id    Int    @id @default(autoincrement())
  name  String @unique
  price Float
  sales Sale[]
}

model Sale {
  id                 Int              @id @default(autoincrement())
  transactionDate    DateTime
  customerName       String
  sellerName         String
  zone               String
  plan               String
  paymentMethod      String
  referenceCode      String?
  installationType   InstallationType
  currency           Currency
  subscriptionAmount Float
  uploadId           Int?
  upload             Upload?          @relation(fields: [uploadId], references: [id], onDelete: Cascade)
  sellerId           Int
  sellerRef          Seller           @relation(fields: [sellerId], references: [id])
  planId             Int
  planRef            Plan             @relation(fields: [planId], references: [id])

  @@index([sellerName])
  @@index([transactionDate])
  @@index([zone])
  @@index([uploadId])
  @@index([sellerId])
  @@index([planId])
}

model CommissionConfig {
  id                      Int   @id @default(autoincrement())
  sellerFreeCommission    Float @default(8)
  sellerPaidCommission    Float @default(10)
  installerFreePercentage Float @default(0.5)
  installerPaidPercentage Float @default(0.7)
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}
