generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum InstallationType {
  FREE
  PAID
}

enum Currency {
  USD
  BCV
}

model Upload {
  id         Int      @id @default(autoincrement())
  fileName   String
  uploadedAt DateTime @default(now())
  sales      Sale[]
}

model Seller {
  id    Int    @id @default(autoincrement())
  name  String @unique
  sales Sale[]
}

model Plan {
  id    Int    @id @default(autoincrement())
  name  String @unique
  price Float
  sales Sale[]
}

model Sale {
  id                 Int              @id @default(autoincrement())
  transactionDate    DateTime
  customerName       String
  sellerName         String
  zone               String
  plan               String
  paymentMethod      String
  referenceCode      String?
  installationType   InstallationType
  currency           Currency
  subscriptionAmount Float
  uploadId           Int?
  upload             Upload?          @relation(fields: [uploadId], references: [id], onDelete: Cascade)
  sellerId           Int
  sellerRef          Seller           @relation(fields: [sellerId], references: [id])
  planId             Int
  planRef            Plan             @relation(fields: [planId], references: [id])

  @@index([sellerName])
  @@index([transactionDate])
  @@index([zone])
  @@index([uploadId])
  @@index([sellerId])
  @@index([planId])
}

model CommissionConfig {
  id                      Int   @id @default(autoincrement())
  sellerFreeCommission    Float @default(8)
  sellerPaidCommission    Float @default(10)
  installerFreePercentage Float @default(0.5)
  installerPaidPercentage Float @default(0.7)
}
